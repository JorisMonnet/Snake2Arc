<Window x:Class="Sake2Arc.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sake2Arc"
        mc:Ignorable="d"
        Title="Snake2Arc" Height="500" Width="550" MinHeight="490" WindowStyle="None" MouseDown="WindowMouseDown"  SizeToContent="WidthAndHeight" Background="Black">
  

    <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >

        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" >
            <TextBlock  Foreground="White">Snake2Arc</TextBlock>
            <TextBlock Name="scoreBoard" Foreground="White">-Score : </TextBlock>
        </WrapPanel>
        <Canvas Name="paintCanvas" Background="Black"
                        Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="450" Width="550">

        </Canvas>
    </WrapPanel>
</Window>
