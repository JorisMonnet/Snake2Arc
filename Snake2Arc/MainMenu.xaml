<Window x:Class="Snake2Arc.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake2Arc"
        mc:Ignorable="d"
        Title="Snake2Arc" Height="450" Width="800"
        Background="Black">
    <Viewbox x:Name="mainViewBox" >
        <WrapPanel Margin="30" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" >
            <Image></Image>
            <Button Margin="5" Padding="2" BorderThickness="0" Background="#FF8A2BE2">Play</Button>
            <Button Margin="5" Padding="2" BorderThickness="0" Background="#FF8A2BE2">LeaderBoard</Button>
            <Button Margin="5" Padding="2" BorderThickness="0" Background="#FF8A2BE2">Options</Button>
            <Button Margin="5" Padding="2" BorderThickness="0" Background="#FF8A2BE2">Quit</Button>
        </WrapPanel>
    </Viewbox>
</Window>
